{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping for submodules */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@cvplus/core": ["../core/src"],
      "@cvplus/auth": ["../auth/src/frontend"],
      "@cvplus/cv-processing": ["../cv-processing/src/frontend"],
      "@cvplus/multimedia": ["../multimedia/src/frontend"],
      "@cvplus/public-profiles": ["../public-profiles/src/frontend"],
      "@cvplus/analytics": ["../analytics/src/frontend"]
    },

    /* Type definitions */
    "types": ["vite/client"]
  },
  "include": [
    "src",
    "../core/src/**/*",
    "../auth/src/frontend/**/*",
    "../cv-processing/src/frontend/**/*",
    "../multimedia/src/frontend/**/*",
    "../public-profiles/src/frontend/**/*",
    "../analytics/src/frontend/**/*"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}